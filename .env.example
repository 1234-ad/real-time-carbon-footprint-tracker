# Carbon Tracker Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-for-external-access
ENCRYPTION_KEY=your-32-character-encryption-key

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=carbon_tracker
POSTGRES_USER=carbon_user
POSTGRES_PASSWORD=carbon_password
POSTGRES_URL=postgresql://carbon_user:carbon_password@localhost:5432/carbon_tracker

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=carbon-tracker-super-secret-token
INFLUXDB_ORG=carbon-tracker
INFLUXDB_BUCKET=carbon-emissions
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=carbontracker123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_CARBON_EMISSIONS=carbon-emissions
KAFKA_TOPIC_DEVICE_STATUS=device-status
KAFKA_TOPIC_ALERTS=alerts
KAFKA_CONSUMER_GROUP=carbon-tracker-consumers

# Cassandra Configuration
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=carbon_tracker
CASSANDRA_USERNAME=
CASSANDRA_PASSWORD=

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=carbon-prediction
MLFLOW_ARTIFACT_ROOT=./mlflow-artifacts

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=carbontracker123

# External APIs
WEATHER_API_KEY=your-weather-api-key
CARBON_INTENSITY_API_KEY=your-carbon-intensity-api-key
ENERGY_GRID_API_URL=https://api.energygrid.com
TRANSPORT_API_KEY=your-transport-api-key

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@carbontracker.com

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#carbon-alerts

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=carbon-tracker-data

# Google Cloud Configuration (if using GCP services)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Azure Configuration (if using Azure services)
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=carbon-tracker-rg
AZURE_STORAGE_ACCOUNT=carbontrackerdata

# Kubernetes Configuration
KUBE_NAMESPACE=carbon-tracker
KUBE_CONFIG_PATH=~/.kube/config

# Development Settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_PROFILING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STORAGE=redis

# Data Retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_API_VERSIONING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/carbon-tracker.crt
SSL_KEY_PATH=/etc/ssl/private/carbon-tracker.key

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/carbon-tracker/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Timezone
TIMEZONE=UTC

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENVIRONMENT=development